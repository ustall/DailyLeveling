<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape

            android:shape="ring"
            android:thickness="15dp"
            android:useLevel="false">
            <solid android:color="?attr/colorDiagramBackground" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">
            <shape
                android:shape="ring"
                android:thickness="15dp"
                android:useLevel="true">
                <gradient
                    android:startColor="?attr/colorDiagramStart"
                    android:endColor="?attr/colorDiagramEnd"
                    android:centerColor="?attr/colorDiagramCentre"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>
