<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyLeveling" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorCardBorder</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorCardBorder">@color/gray_50</item>

        <item name="colorDiagramBackground">@color/gray_200</item>
        <item name="colorDiagramStart">@color/purple_200</item>
        <item name="colorDiagramCentre">@color/purple_500</item>
        <item name="colorDiagramEnd">@color/purple_700</item>

        <item name="colorUncheckedMark">@color/gray_500</item>
    </style>
</resources>